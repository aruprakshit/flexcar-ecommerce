<div class="container">
  <!-- Page Header -->
  <section class="section">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column">
          <h1 class="title is-2 has-text-primary">Products</h1>
          <p class="subtitle is-4">Discover our complete collection of quality products</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters and Sort Bar -->
  <section class="section">
    <div class="container">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <h2 class="title is-4">All Products</h2>
          </div>
          <div class="level-item">
            <span class="tag is-light">
              <%= pluralize(@items.count, 'product') %> available
            </span>
          </div>
        </div>
        
        <div class="level-right">
          <div class="level-item">
            <div class="field has-addons">
              <div class="control">
                <span class="select">
                  <select id="sort-select">
                    <option value="name">Sort by Name</option>
                    <option value="price_asc">Price: Low to High</option>
                    <option value="price_desc">Price: High to Low</option>
                    <option value="category">Sort by Category</option>
                    <option value="brand">Sort by Brand</option>
                  </select>
                </span>
              </div>
            </div>
          </div>
          
          <div class="level-item">
            <div class="field has-addons">
              <div class="control">
                <span class="select">
                  <select id="category-filter">
                    <option value="">All Categories</option>
                    <% Category.order(:name).each do |category| %>
                      <option value="<%= category.id %>"><%= category.name %></option>
                    <% end %>
                  </select>
                </span>
              </div>
            </div>
          </div>
          
          <div class="level-item">
            <div class="field has-addons">
              <div class="control">
                <span class="select">
                  <select id="brand-filter">
                    <option value="">All Brands</option>
                    <% Brand.order(:name).each do |brand| %>
                      <option value="<%= brand.id %>"><%= brand.name %></option>
                    <% end %>
                  </select>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="section">
    <div class="container">
      <% if @items.any? %>
        <div class="columns is-multiline" id="items-grid">
          <% @items.each do |item| %>
            <div class="column is-one-quarter-desktop is-one-third-tablet is-half-mobile item-card" 
                 data-category="<%= item.category.id %>" 
                 data-brand="<%= item.brand.id %>"
                 data-name="<%= item.name.downcase %>"
                 data-price="<%= item.price %>">
              <%= render 'item_card', item: item %>
            </div>
          <% end %>
        </div>
        
        <!-- Pagination -->
        <% if @items.respond_to?(:current_page) %>
          <%= render 'shared/pagination', paginated_collection: @items %>
        <% else %>
          <!-- Load More Button (for future pagination) -->
          <div class="level" style="margin-top: 2rem;">
            <div class="level-left">
              <div class="level-item">
                <span class="tag is-light">
                  All products loaded
                </span>
              </div>
            </div>
            <div class="level-right">
              <div class="level-item">
                <button class="button is-primary" disabled>
                  <span class="icon">
                    <i class="fas fa-check"></i>
                  </span>
                  <span>Complete</span>
                </button>
              </div>
            </div>
          </div>
        <% end %>
        
      <% else %>
        <!-- Empty State -->
        <div class="has-text-centered">
          <div class="box" style="max-width: 500px; margin: 0 auto;">
            <span class="icon is-large has-text-grey-light">
              <i class="fas fa-box-open fa-3x"></i>
            </span>
            <h3 class="title is-4 has-text-grey">No Products Available</h3>
            <p class="subtitle is-6 has-text-grey">Check back later for new product additions!</p>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>