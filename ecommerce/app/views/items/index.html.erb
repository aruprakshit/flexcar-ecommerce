<div class="container">
  <!-- Page Header -->
  <section class="section">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column">
          <h1 class="title is-2 has-text-primary">Products</h1>
          <p class="subtitle is-4">Discover our complete collection of quality products</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters and Sort Bar -->
  <section class="section">
    <div class="container">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <h2 class="title is-4">All Products</h2>
          </div>
          <div class="level-item">
            <span class="tag is-light">
              <%= pluralize(@items.count, 'product') %> available
            </span>
          </div>
        </div>
        
        <div class="level-right">
          <div class="level-item">
            <div class="field">
              <div class="control">
                <%= form_with url: items_path, method: :get, local: true, class: "select" do |form| %>
                  <%= form.hidden_field :category_id, value: params[:category_id] %>
                  <%= form.hidden_field :brand_id, value: params[:brand_id] %>
                  <%= form.select :sort, 
                      options_for_select([
                        ['Sort by Name', 'name'],
                        ['Price: Low to High', 'price_asc'],
                        ['Price: High to Low', 'price_desc'],
                        ['Sort by Category', 'category'],
                        ['Sort by Brand', 'brand']
                      ], params[:sort]),
                      {},
                      { onchange: 'this.form.submit();', class: 'select' } %>
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="level-item">
            <div class="field">
              <div class="control">
                <%= form_with url: items_path, method: :get, local: true, class: "select" do |form| %>
                  <%= form.hidden_field :sort, value: params[:sort] %>
                  <%= form.hidden_field :brand_id, value: params[:brand_id] %>
                  <%= form.select :category_id, 
                      options_for_select([['All Categories', '']] + Category.order(:name).map { |c| [c.name, c.id] }, params[:category_id]),
                      {},
                      { onchange: 'this.form.submit();', class: 'select' } %>
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="level-item">
            <div class="field">
              <div class="control">
                <%= form_with url: items_path, method: :get, local: true, class: "select" do |form| %>
                  <%= form.hidden_field :sort, value: params[:sort] %>
                  <%= form.hidden_field :category_id, value: params[:category_id] %>
                  <%= form.select :brand_id, 
                      options_for_select([['All Brands', '']] + Brand.order(:name).map { |b| [b.name, b.id] }, params[:brand_id]),
                      {},
                      { onchange: 'this.form.submit();', class: 'select' } %>
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="level-item">
            <div class="field">
              <div class="control">
                <%= link_to "Clear Filters", items_path, class: "button is-light" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="section">
    <div class="container">
      <% if @items.any? %>
        <div class="product-grid">
          <div class="columns is-multiline">
            <% @items.each do |item| %>
              <div class="column is-one-quarter-desktop is-one-third-tablet is-half-mobile">
                <%= render 'item_card', item: item %>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Pagination -->
        <% if @items.respond_to?(:current_page) %>
          <%= render 'shared/pagination', paginated_collection: @items %>
        <% else %>
          <!-- Load More Button (for future pagination) -->
          <div class="level" style="margin-top: 2rem;">
            <div class="level-left">
              <div class="level-item">
                <span class="tag is-light">
                  All products loaded
                </span>
              </div>
            </div>
            <div class="level-right">
              <div class="level-item">
                <button class="button is-primary" disabled>
                  <span class="icon">
                    <i class="fas fa-check"></i>
                  </span>
                  <span>Complete</span>
                </button>
              </div>
            </div>
          </div>
        <% end %>
        
      <% else %>
        <!-- Empty State -->
        <div class="has-text-centered">
          <div class="box" style="max-width: 500px; margin: 0 auto;">
            <span class="icon is-large has-text-grey-light">
              <i class="fas fa-box-open fa-3x"></i>
            </span>
            <h3 class="title is-4 has-text-grey">No Products Found</h3>
            <p class="subtitle is-6 has-text-grey">Try adjusting your filters or check back later!</p>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>